{
  "manifest_version": 3,
  "name": "Pick&Link",
  "version": "2.0.0",
  "description": "A Chrome extension to pick and share code links.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}